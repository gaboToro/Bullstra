@startuml SistemaGestionLogisticaContext
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

' Personas
Person(cliente, "Cliente", "Crea, consulta y sigue sus pedidos, consulta productos.")
Person(administrador, "Administrador", "Gestiona inventario, monitorea operaciones, accede a reportes.")
Person(personal_logistico, "Personal Logístico", "Conductores y personal de almacén que gestionan entregas y stock.")

' Sistemas Externos
System_Ext(transportistas, "Servicios de Transportistas Externos", "APIs de empresas de transporte (ej. DHL, FedEx).")
System_Ext(pasarelas_pago, "Pasarela de Pago", "Sistema para procesar transacciones financieras.")
System_Ext(sistemas_empresariales, "Sistemas Empresariales Existentes", "Sistemas de compras o ERPs para gestión de proveedores.")
System_Ext(servicios_notificaciones, "Servicios de Notificaciones Externos", "Plataformas de envío de Email y SMS (ej. SendGrid, Twilio).")

' Sistema bajo desarrollo
System(logistica_scm, "Sistema de Gestión de Logística y Cadena de Suministro", "Optimiza la gestión de productos, inventario, pedidos y envíos a lo largo de la cadena de suministro, usando una arquitectura de microservicios.")

' Relaciones
Rel(cliente, logistica_scm, "Crea y gestiona pedidos, consulta productos", "HTTPS / API Web")
Rel(administrador, logistica_scm, "Gestiona y monitorea operaciones", "HTTPS / API Web")
Rel(personal_logistico, logistica_scm, "Actualiza stock, confirma entregas, seguimiento de ruta", "HTTPS / API Móvil")

Rel(logistica_scm, transportistas, "Gestiona y envía datos de envío", "API REST / Webhook")
Rel(logistica_scm, pasarelas_pago, "Procesa pagos de pedidos", "API REST / Webhook")
Rel(logistica_scm, sistemas_empresariales, "Gestiona proveedores y órdenes de compra", "API REST / SOAP")
Rel(logistica_scm, servicios_notificaciones, "Envía notificaciones por Email y SMS", "API REST")

@enduml